{
  "name": "electron_app",
  "version": "1.0.0",
  "description": "Standalone desktop ver. of Fogg Lab's Gene Platform",
  "main": "main.js",
  "scripts": {
    "start": "webpack serve --config webpack.config.js --mode development",
    "build": "webpack --config webpack.config.js --mode production",
    "electron": "electron .",
    "electron-dev": "electron . --dev-tools",
    "dev": "concurrently \"npm run start\" \"wait-on http://localhost:9000 && npm run electron\"",
    "dev-debug": "concurrently \"npm run start\" \"wait-on http://localhost:9000 && npm run electron-dev\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fogg-lab/gene-platform.git#electron_app"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fogg-lab/gene-platform/issues"
  },
  "homepage": "https://github.com/fogg-lab/gene-platform/tree/electron_app#readme",
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@chromatic-com/storybook": "^1.6.1",
    "@storybook/addon-essentials": "^8.1.11",
    "@storybook/addon-interactions": "^8.1.11",
    "@storybook/addon-links": "^8.1.11",
    "@storybook/addon-onboarding": "^8.1.11",
    "@storybook/addon-webpack5-compiler-swc": "^1.0.4",
    "@storybook/blocks": "^8.1.11",
    "@storybook/react": "^8.1.11",
    "@storybook/react-webpack5": "^8.1.11",
    "@storybook/test": "^8.1.11",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^7.1.2",
    "electron": "^31.0.1",
    "electron-devtools-installer": "^3.2.0",
    "electron-is-dev": "^3.0.1",
    "eslint-plugin-storybook": "^0.8.0",
    "file-loader": "^6.2.0",
    "sass": "^1.77.6",
    "sass-loader": "^14.2.1",
    "storybook": "^8.1.11",
    "style-loader": "^4.0.0",
    "wait-on": "^7.2.0",
    "webpack": "^5.92.0",
    "webpack-cli": "^5.1.4",
